<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/banfsage_lite"
        tools:context=".ui.fragment.home.FragmentPayment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/ic_payment"
            app:layout_constraintEnd_toStartOf="@+id/txt_payment"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/banfsage"
            android:textSize="@dimen/_25ssp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_payment">

            <EditText
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:hint="enter coupon code "
                android:paddingStart="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Apply"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:textColor="@color/banfsage"
                android:textSize="@dimen/_15ssp" />
        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/Relative"

            />
        <TextView
            android:id="@+id/num_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Items"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_100sdp"
            app:layout_constraintTop_toBottomOf="@id/Relative"

            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 EGP"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/Relative"

            />
        <TextView
            android:id="@+id/txt_shipping_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shipping fee"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/Relative"
/>
        <TextView
            android:id="@+id/shipping_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/Relative"

            />

        <TextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/txt_shipping_fee"
            />
        <TextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 EGP"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/banfsage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/txt_shipping_fee"

            />


        <Button
            android:id="@+id/buynow"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_60ssp"
            android:background="@drawable/product"
            android:backgroundTint="@color/banfsage"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>